>
-->
<section class="col-span-8 col-start-3">
  {
    Pubs.map((publication, index) => (
      <Card
        title={publication.title}
        event={publication.event}
        authors={publication.authors}
        image={images[index]}
        year={publication.year}
        doi={publication.doi}
        url={publication.url}
        pdf={publication.pdf}
        alt={publication.alt}
        video={publication.video}
      />
    ))
  }
</section>
