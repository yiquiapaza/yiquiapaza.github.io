---
import { Image } from "astro:assets";
const { title, event, authors, doi, pdf, url, video, year, image, alt } =
	Astro.props;
---

<!--TODO: add tag or using a box with different background color -->
<div
  class="bottom-2 mx-auto mb-6 mt-6 max-w-sm overflow-hidden rounded-xl bg-interactive-blue-3 shadow-md dark:bg-dark-interactive-blue-3 md:max-w-6xl"
>
  <div class="flex flex-col items-center md:flex md:flex-row">
    <div class="relative rounded">
      {
        (
          <Image
            src={image}
            alt={alt}
            class="rounded object-cover p-4"
            width="350"
            height="350"
            loading="lazy"
          />
        )
      }
    </div>
    <div class="p-2 md:p-8">
      <div
        class="text-sm font-semibold uppercase tracking-wide text-accessible-text-blue-1 dark:text-dark-accessible-text-blue-1 md:text-lg"
      >
        {title}
      </div>
      <h1
        class="mt-1 block text-sm font-medium leading-tight text-accessible-text-blue-2 dark:text-dark-accessible-text-blue-2 md:text-lg"
      >
        {event} - {year}
      </h1>
      <h2
        class="md:test-md mt-1 block text-sm leading-tight text-accessible-text-blue-2 dark:text-dark-accessible-text-blue-2"
      >
        {
          authors.map((author: string) =>
            author === 'Yhonatan Iquiapaza,' ? (
              <span class="pr-2">
                <strong>{author}</strong>
              </span>
            ) : (
              <span class="pr-2">{author}</span>
            )
          )
        }
      </h2>
      <p class="mt-2 hidden text-slate-500">
        Looking to take your team away on a retreat to enjoy awesome food and
        take in some sunshine? We have a list of places to do just that.
      </p>
      <div class="mt-3 flex flex-row">
        {
          doi && (
            <div class="mr-2.5">
              <a
                href={doi}
                target="_blank"
                class="block w-14 content-center rounded-lg bg-cyan-500"
              >
                <div class="flex justify-center">
                  <h3 class="text-center text-sm font-semibold text-interactive-blue-3">
                    DOI
                  </h3>
                </div>
              </a>
            </div>
          )
        }
        {
          pdf && (
            <div class="mr-2.5">
              <a
                href={pdf}
                target="_blank"
                class="block w-14 content-center rounded-lg bg-fuchsia-500"
              >
                <div class="flex justify-center">
                  <h3 class="text-center text-sm font-semibold text-interactive-blue-3">
                    PDF
                  </h3>
                </div>
              </a>
            </div>
          )
        }
        {
          url && (
            <div class="mr-2.5">
              <a
                href={url}
                target="_blank"
                class="block w-14 content-center rounded-lg bg-emerald-500"
              >
                <div class="flex justify-center">
                  <h3 class="text-center text-sm font-semibold text-interactive-blue-3">
                    URL
                  </h3>
                </div>
              </a>
            </div>
          )
        }
        {
          video && (
            <div class="mr-2.5">
              <a
                href={video}
                target="_blank"
                class="block w-14 content-center rounded-lg bg-red-500"
              >
                <div class="flex justify-center">
                  <h3 class="text-center text-sm font-semibold text-interactive-blue-3">
                    Video
                  </h3>
                </div>
              </a>
            </div>
          )
        }
      </div>
    </div>
  </div>
</div>
