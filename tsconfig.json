{
    "extends": "astro/tsconfigs/strict",
    "include": ["astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["./src/components/*"],
            "@assets/*": ["./src/assets/*"],
            "@data/*": ["./src/data/*"],
            "@interfaces/*": ["./src/interfaces/*"],
            "@layouts/*": ["./src/layouts/*"],
        }
    }
}
